<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
       <block class="Magento\Cms\Block\Block" name="custom-block-page">
        <arguments>
            <argument name="block_id" xsi:type="string">company_explanation_page</argument>
        </arguments>
    </block>
</referenceContainer>
<move element="custom-block-page" destination="content" before="-" />
<referenceBlock name="page.main.title" remove="true" />
    </body>
</page>

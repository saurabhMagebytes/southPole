<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" engine="innodb" comment="Sales Order">
        <column xsi:type="varchar" name="certificate_name" nullable="true" length="255" comment="Name on the certificate"/>
		<column xsi:type="varchar" name="special_instructions" nullable="true" length="255" comment="Order Special Instructions"/>
    </table>
    <table name="quote" resource="checkout" engine="innodb" comment="Quote">
        <column xsi:type="varchar" name="certificate_name" nullable="true" length="255" comment="Name on the certificate"/>
		<column xsi:type="varchar" name="special_instructions" nullable="true" length="255" comment="Order Special Instructions"/>
    </table>
</schema>

<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" engine="innodb" comment="Sales Order">
        <column xsi:type="varchar" name="bucket_preorder_id" nullable="true" length="255" comment="Name on the certificate"/>
        <column xsi:type="smallint" name="aq_order_purchase_flag" padding="6" unsigned="false" nullable="false" identity="false" default="0" comment="AQ Order Purchase Flag"/>
    </table>
</schema>
